@model ProjectPortfolio.Models.Category

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h2 class=" mb-4">Kategori Listesi</h2>
<br />

<form method="post">
    @Html.HiddenFor(x => x.CategoryId, new { @class = "form-control" })
    <br />
    <label>Kategori Adı</label>
    <!--Inputtan farkı. Name e için hata olasılıpını azaldır. her seferinde sqle gitmeye gerek kalmaz-->
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />

    <label>Aktiflik Durumu</label>
    @Html.TextBoxFor(x => x.CategoryStatus, new { @class = "form-control" })
    <br />


    <button class="btn btn-info">Kategori Güncelle</button>
</form>

