@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<ProjectPortfolio.Models.Skill>
@{
    ViewBag.Title = "SkillList";
    Layout = "~/Views/Admin/Index.cshtml";
}
<!--Yetenekleri dinamik olarak seçtik.-->
<h2 class=" mb-4">Yeteneklerim Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Değer</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SkillId</td>
            <td>@item.Title</td>
            <td>@item.Value</td>
            <td><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("SkillList", 
    new { page }),new PagedListRenderOptions{LiElementClasses =new List<string>{ "page-link"}})
<a href="/Skill/CreateSkill/" class="btn btn-info">Yeni Yetenek Girişi</a>

<a href="@Url.Action("PartialGrafficc", "Graffics")" class="btn btn-primary">Grafiği Görüntüle</a>