@model List<ProjectPortfolio.Models.Servicess>
@{
    ViewBag.Title = "ServicessList";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h2 class=" mb-4">Hizmet Listesi</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hizmet Adı</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/Servicess/DeleteServicess/@item.ServiceId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Servicess/UpdateServicess/@item.ServiceId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Servicess/CreateServicess/" class="btn btn-info">Yeni Hizmet Ekle</a>
