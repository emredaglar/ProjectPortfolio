@model List<ProjectPortfolio.Models.Experience>
@{
    ViewBag.Title = "ExperienceList";
    Layout = "~/Views/Admin/Index.cshtml";
}
<h2 class=" mb-4">Deneyim Listesi</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Şirket</th>
        <th>Tarih</th>
        <th>Unvan</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ExperienceId</td>
            <td>@item.CompanyName</td>
            <td>@item.WorkDate</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a  class="btn btn-danger" href="/Experience/DeleteExperience/@item.ExperienceId">Sil</a></td>
            <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Experience/CreateExperience/" class="btn btn-info">Yeni Deneyim Ekle</a>