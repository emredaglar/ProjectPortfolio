
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class=" mb-4">İstatistik Listesi</h2>

<div class="alert alert-info">Toplam Mesaj Sayısı: <b>@ViewBag.messageCount</b></div>
<div class="alert alert-success">Okunmuş Mesaj Sayısı: <b>@ViewBag.messageCountIsReadByTrue</b></div>
<div class="alert alert-secondary">Okunmamış Mesaj Sayısı: <b>@ViewBag.messageCountIsReadByFalse</b></div>
<div class="alert alert-danger">Yetenek Sayısı: <b>@ViewBag.skillCount</b></div>
<div class="alert alert-warning">Yeteneklerin Toplam Puanı: <b>@ViewBag.totalSkillValue</b></div>
<div class="alert alert-dark">Yeteneklerin Ortalama Puanı: <b>@ViewBag.avarageSkillValue</b></div>
<div class="alert alert-primary">Mevcut Mail: <b>@ViewBag.getEmailFromProfile</b></div>
<div class="alert alert-info">Son Eklenen Kategori: <b>@ViewBag.getLastCategoryName</b></div>

